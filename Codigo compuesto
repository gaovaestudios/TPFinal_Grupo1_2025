#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <Keypad.h>

// --- LCD I2C ---
LiquidCrystal_I2C lcd(0x27, 16, 2);  // Cambia a 0x3F si no se ve nada

// --- Keypad 4x4 ---
const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};
byte rowPins[ROWS] = {10, 9, 8, 7};
byte colPins[COLS] = {6, 5, 4, 3};
Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

// --- Sensor BPM ---
#define samp_siz 4
#define rise_threshold 5
int sensorPin = A0;
int buzzer = 12;
bool sensorActivo = false;

// --- Variables del sensor ---
float reads[samp_siz];
float sum, last, reader, before = 0;
bool rising = false;
int rise_count = 0;
float first = 0, second = 0, third = 0;
float print_value = 0, lastBPM = 0;
unsigned long last_beat = 0, lastPrint = 0;
const unsigned long interval = 3000;

// --- Estado del menú ---
enum Estado { MENU, SENSOR };
Estado estadoActual = MENU;

void setup() {
  Serial.begin(9600);
  pinMode(buzzer, OUTPUT);
  
  lcd.init();
  lcd.backlight();
  lcd.clear();
  mostrarMenu();
}

void loop() {
  char key = keypad.getKey();

  if (key) {
    Serial.print("Tecla presionada: ");
    Serial.println(key);

    if (estadoActual == MENU) {
      manejarMenu(key);
    } 
    else if (estadoActual == SENSOR) {
      // --- controles válidos mientras el sensor está activo ---
      if (key == '0') {
        apagarSensor();
      } 
      else if (key == '2') {
        beepTresSegundos();  // ahora funciona también dentro del modo sensor
      }
    }
  }

  if (estadoActual == SENSOR && sensorActivo) {
    medirBPM();
  }
}

// --- Mostrar menú principal ---
void mostrarMenu() {
  estadoActual = MENU;
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("1) Iniciar sensor");
  lcd.setCursor(0, 1);
  lcd.print("2) Beep 3s  0)Off");
}

// --- Manejo del menú ---
void manejarMenu(char key) {
  switch (key) {
    case '1':
      iniciarSensor();
      break;

    case '0':
      apagarSensor();
      break;

    case '2':
      beepTresSegundos();
      break;

    default:
      lcd.clear();
      lcd.print("Opcion invalida");
      delay(1000);
      mostrarMenu();
      break;
  }
}

// --- Iniciar sensor BPM ---
void iniciarSensor() {
  lcd.clear();
  lcd.print("Iniciando sensor");
  delay(1000);
  lcd.clear();
  lcd.print("Midiendo BPM...");
  sensorActivo = true;
  estadoActual = SENSOR;
  
  for (int i = 0; i < samp_siz; i++) reads[i] = 0;
  sum = 0; rising = false; rise_count = 0;
  first = second = third = 0;
  before = 0; lastBPM = 0;
  lastPrint = millis();
}

// --- Medir BPM (bucle continuo) ---
void medirBPM() {
  static int ptr = 0;
  long now, start;
  int n = 0;
  float reader_local;

  // Promediar lecturas por 20ms
  start = millis();
  reader_local = 0;
  do {
    reader_local += analogRead(sensorPin);
    n++;
    now = millis();
  } while (now < start + 20);
  reader_local /= n;

  // Promedio móvil
  sum -= reads[ptr];
  sum += reader_local;
  reads[ptr] = reader_local;
  last = sum / samp_siz;
  ptr++;
  if (ptr >= samp_siz) ptr = 0;

  // Detección de subida (latido)
  if (last > before) {
    rise_count++;
    if (!rising && rise_count > rise_threshold) {
      rising = true;
      first = millis() - last_beat;
      last_beat = millis();
      print_value = 60000. / (0.4 * first + 0.3 * second + 0.3 * third);
      third = second;
      second = first;

      if (print_value >= 40 && print_value <= 100) {
        lastBPM = print_value;
      }
    }
  } else {
    rising = false;
    rise_count = 0;
  }

  before = last;

  // Mostrar BPM cada 3 segundos
  if (millis() - lastPrint >= interval) {
    lcd.clear();
    lcd.setCursor(0, 0);
    if (lastBPM > 0) {
      lcd.print("BPM: ");
      lcd.print(lastBPM, 0);
      tone(buzzer, 1000, 200);
    } else {
      lcd.print("Esperando senal");
    }
    lastPrint = millis();
  }
}

// --- Apagar sensor ---
void apagarSensor() {
  sensorActivo = false;
  lcd.clear();
  lcd.print("...");
  noTone(buzzer);
  delay(1000);
  mostrarMenu();
}

// --- Beep de 3 segundos ---
void beepTresSegundos() {
  lcd.clear();
  lcd.print("Te moriste :(");
  tone(buzzer, 1000);  // Sonido constante
  delay(3000);
  apagarSensor();

  // Si estaba en modo SENSOR, volver al monitoreo
  if (estadoActual == SENSOR) {
    lcd.clear();
    lcd.print("Midiendo BPM...");
  } else {
    mostrarMenu();
  }
}
